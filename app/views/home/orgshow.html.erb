
<%= render :partial => "layouts/first" %>
<div  style="position:absolute; left:4px; top:100px; width:px; height:px; ; ; text-align: center ; font-family:Arial; text-align:left; word-wrap:break-word;" >>
<h1>Listing organisations</h1>

<table border = "1" cellspacing="1">
  <tr>
    <th>Organisation name</th>
    <th>Category</th>
    <th>Description</th>
  
    
  </tr>

<% @organisations.each do |organisation| %>
  <tr>
    <td><%= organisation.organisation_name %></td>
    <td><%= organisation.category %></td>
    <td><%= organisation.description %></td>
    
    <td><%= link_to 'View details', "/home/orgdetail/#{organisation.id}" %></td>
    </tr>
<% end %>
</table>

<br />

</div>
