<%= render :partial => "layouts/last" %>

<script src="/javascripts/livevalidation_standalone.js"></script>
<div  style="position:absolute; left:150px; top:150px; width:px; height:px; ; ; text-align: center ; font-family:Arial; text-align:left; word-wrap:break-word;" >


<h1>CREATE AN EVENT</h1>

<%=form_for :@myevent, :url=>{:action=>'cause', :controller=>'myevents'} do |f|%>

<table border=1>
<div class="field">
    <%= f.label :mobile_number %><br />
    <%= f.text_field :mobile_number %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :time %><br />
    <%= f.time_select :time %>
  </div>
  <div class="field">
    <%= f.label :venue %><br />
    <%= f.text_field :venue %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
<%= f.submit'Continue' %>

  </div>
</table>

 <script>
var f1 = new LiveValidation('_myevent_mobile_number');
f1.add( Validate.Presence ); 
</script>
 <script>
var f2 = new LiveValidation('_myevent_title');
f2.add( Validate.Presence ); 
</script>
 <script>

var f3 = new LiveValidation('_myevent_venue');
f3.add( Validate.Presence );
</script> 
 <script>
var f4 = new LiveValidation('_myevent_description');
f4.add( Validate.Presence ); 
</script>

<% end %>


