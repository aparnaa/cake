<div  style="position:absolute; left:150px; top:150px; width:px; height:px; ; ; text-align: center ; font-family:Arial; text-align:left; word-wrap:break-word;" >


<h1>CREATE AN EVENT</h1>

<%=form_for :@myevent, :url=>{:action=>'cause', :controller=>'myevents'} do |f|%>

<table border=1>
<div class="field">
    <%= f.label :mobile_number %><br />
    <%= f.text_field :mobile_number %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :event_date %>
  </div>
  <div class="field">
    <%= f.label :time %><br />
    <%= f.time_select :event_time %>
  </div>
  <div class="field">
    <%= f.label :venue %><br />
    <%= f.text_field :venue %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
<%= f.submit'Continue' %>

  </div>
</table>
<% end %>


