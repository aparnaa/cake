<h1>Listing organisations</h1>

<table>
  <tr>
    <th>Organisation name</th>
    <th>Contact person</th>
    <th>Address line1</th>
    <th>Address line2</th>
    <th>Phone</th>
    <th>Website</th>
    <th>Email</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @organisations.each do |organisation| %>
  <tr>
    <td><%= organisation.organisation_name %></td>
    <td><%= organisation.contact_person %></td>
    <td><%= organisation.address_line1 %></td>
    <td><%= organisation.address_line2 %></td>
    <td><%= organisation.phone %></td>
    <td><%= organisation.website %></td>
    <td><%= organisation.email %></td>
    <td><%= organisation.status %></td>

    <p style="color: red; font-size: 40pt"> No Blogs are saved!!!</p>
    <td><%= link_to 'Show', organisation %></td>
    <td><%= link_to 'Edit', edit_organisation_path(organisation) %></td>
    <td><%= link_to 'Destroy', organisation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>

</table>

